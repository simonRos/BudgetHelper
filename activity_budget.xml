<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.budgethelper.Budget">

    <TextView
        android:id="@+id/budgetlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your current weekly budget is:"
        android:textSize="18dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/linebreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_below="@+id/budgetlabel"/>

    <TextView
        android:id="@+id/budgetamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/totalbudget"
        android:textSize="60dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linebreak"/>

    <TextView
        android:id="@+id/linebreak2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_below="@+id/budgetamount"/>

    <TextView
        android:id="@+id/currentbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your remaining budget for this week is:"
        android:layout_below="@+id/linebreak2"/>

    <TextView
        android:id="@+id/currentbudgetamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentbudget"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_below="@+id/currentbudget"/>


    <TextView
        android:id="@+id/linebreak3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_below="@+id/currentbudgetamount"/>

    <TextView
        android:id="@+id/newbudgetprompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input a new budget here:"
        android:layout_below="@+id/linebreak3"/>

    <EditText
        android:hint="@string/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_below="@+id/newbudgetprompt"/>

    <EditText
        android:hint="@string/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startdate"
        android:layout_below="@+id/amount"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/saveButton"
        android:layout_below="@+id/startdate"/>


</RelativeLayout>
