<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.budgethelper.UO">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a UO"
        android:textSize="30dp"
        android:textColor="#0101DF"
        android:layout_alignParentTop="true"/>

    <EditText
        android:hint="@string/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="15"
        android:id="@+id/amount"
        android:layout_below="@+id/title"/>

    <EditText
        android:hint="Friend's Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/name"
        android:layout_below="@+id/amount"/>

    <EditText
        android:hint="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/dateInput"
        android:layout_below="@+id/name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Date"
        android:id="@+id/uodate"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@id/dateInput"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_below="@+id/uodate"
        android:layout_toRightOf="@id/title"
        android:layout_toEndOf="@id/title"
        android:layout_marginTop="121dp" />


</RelativeLayout>
